{
  "name": "customer-service-helper-be",
  "version": "1.0.0",
  "description": "This is the **backend service** for the Customer Service Helper application, designed to streamline support operations across organizations by uniting agents and AI tools in a shared workflow. It provides endpoints for managing organizations, agents, member profiles, knowledge base articles, QA evaluations, and call wrap-up logic.",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "generate": "prisma generate",
    "postinstall": "npm run generate",
    "seed": "ts-node-dev --respawn --transpile-only src/seed.ts",
    "build": "tsc",
    "start": "node server.js",
    "test": "cross-env NODE_ENV=test jest --runInBand --detectOpenHandles",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "prepare": "husky install",
    "lint": "eslint src --ext .ts --ignore-pattern src/generated/**",
    "format:check": "prettier --check ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codejoncode/customer-service-helper-be.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/codejoncode/customer-service-helper-be/issues"
  },
  "homepage": "https://github.com/codejoncode/customer-service-helper-be#readme",
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "mongoose": "^8.16.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "cross-env": "^7.0.3",
    "dotenv": "^17.2.0",
    "eslint": "^9.31.0",
    "eslint-plugin-jest": "^29.0.1",
    "globals": "^16.3.0",
    "husky": "^8.0.0",
    "jest": "^30.0.4",
    "prettier": "^3.6.2",
    "prisma": "^6.12.0",
    "supertest": "^7.1.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
